# Local development environment — DO NOT commit this file to git

NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=debug

# Dev bypass token — accepted as a valid Bearer token in non-production
DEV_API_TOKEN=dev-token-quotes-2026

# JWT (only used in production when DEV_API_TOKEN bypass is disabled)
JWT_SECRET=dev-secret-change-in-production
JWT_ISSUER=quotes-aggregator
JWT_AUDIENCE=quotes-api

# Redis (in-memory fallback is used when REDIS_URL is not set)
# REDIS_URL=redis://localhost:6379
IDEMPOTENCY_TTL=86400

# Circuit Breaker
CB_TIMEOUT=3000
CB_ERROR_THRESHOLD=50
CB_RESET_TIMEOUT=30000
CB_VOLUME_THRESHOLD=5

# Rate limiting
RATE_LIMIT_MAX=100

# Azure Service Bus — leave blank to disable event publishing locally
# SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://sb-quotes-aggregator-prod.servicebus.windows.net/;SharedAccessKeyName=quotes-aggregator-send;SharedAccessKey=...
# SERVICE_BUS_NAMESPACE=sb-quotes-aggregator-prod
SERVICE_BUS_TOPIC_NAME=quotes.issued
