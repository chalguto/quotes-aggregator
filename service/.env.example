# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Authentication
JWT_SECRET=change-this-secret-in-production
JWT_ISSUER=quotes-aggregator
JWT_AUDIENCE=quotes-api

# Development - set a static token to bypass full JWT verification
DEV_API_TOKEN=dev-token-quotes-2026

# Redis (idempotency cache)
REDIS_URL=redis://localhost:6379
IDEMPOTENCY_TTL=86400  # 24 hours in seconds

# Rate limiting
RATE_LIMIT_MAX=100  # requests per minute

# Circuit Breaker
CB_TIMEOUT=3000           # ms before request is considered failed
CB_ERROR_THRESHOLD=50     # % error rate to open the breaker
CB_RESET_TIMEOUT=30000    # ms before attempting to close the breaker
CB_VOLUME_THRESHOLD=5     # minimum calls before CB evaluates

# Logging
LOG_LEVEL=info
